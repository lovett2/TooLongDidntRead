{
  "manifest_version": 2,
  "name": "Too Long; Didnt Read",
	"description": "a sample manifest",
	"version": "1.0",
	"permissions": [
		"storage"
	],
	"background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "content_scripts": [
  	  {
  	    "matches": [
  	      "<all_urls>"
  	    ],
  	    "js": ["jquery-3.2.1.min.js","content.js"],
        "run_at": "document_start",
        "all_frames": true
  	  }
  	],
	"browser_action": {
    "default_icon": "folded-newspaper.png",
		"default_popup": "dialogue.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

	"permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
  }